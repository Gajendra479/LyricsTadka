<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dayBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vianet.lyricstadka.MainActivity"
    tools:showIn="@layout/app_bar_main">



    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/container"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/main_recycle"
                android:layout_height="match_parent"
               >

            </android.support.v7.widget.RecyclerView>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/conta"
        android:layout_height="match_parent">

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/refresh_image_size"
        android:id="@+id/refresh_id_image"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/ic_refresh_image"
        android:layout_height="@dimen/refresh_image_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_below="@+id/refresh_id_image"
        android:id="@+id/Error_main"
        android:visibility="gone"
        android:layout_height="wrap_content"/>


    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/progresBarM"
        android:visibility="visible"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="15dp"/>

</RelativeLayout>
