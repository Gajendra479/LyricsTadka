<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    tools:context="com.vianet.lyricstadka.FragmentLyrics.LyricsList">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lyricsCatRecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/lyrics_list_refresh"
        android:layout_width="@dimen/refresh_image_size"
        android:layout_height="@dimen/refresh_image_size"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_refresh_image"
        android:visibility="gone" />


    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyrics_list_refresh"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progresBarL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/bottamBarProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_image"
        android:visibility="gone" />


</RelativeLayout>
